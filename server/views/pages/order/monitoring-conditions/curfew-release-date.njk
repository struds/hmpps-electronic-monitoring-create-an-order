{% extends "../../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Form Details" %}
{% set mainClasses = "app-container govuk-body" %}
{% from "moj/components/page-header-actions/macro.njk" import mojPageHeaderActions %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "../../../partials/timeSpanInput.njk" import timeSpanInput %}

{% block content %}

  {{ govukBackLink({
    text: "Back",
    href: orderSummaryUri
  }) }}

  {% if not isOrderEditable %}
      {% set html %}
        <p class="govuk-notification-banner__heading">
          You are viewing a submitted order.
        </p>
      {% endset %}

      {{ govukNotificationBanner({
        html: html
      }) }}
  {% endif %}

  <div class="homepage-content">
    {{ mojPageHeaderActions({
      heading: {
          text: "Monitoring conditions"
      }
    }) }}
  </div>

  <h2 class="govuk-heading-m">Curfew for day of release</h2>

  <form method="post">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    {% set disabled = {} if isOrderEditable else { disabled:true } %}
    
    {{ govukDateInput({
      id: "releaseDate",
      fieldset: {
        legend: {
          text: "Release date",
          isPageHeading: false,
          classes: "govuk-fieldset__legend--s"
        }
      },
      hint: {
        text: "Provide the date the device wearer will be released from custody. For example, 21 05 2011"
      },
      items: [
        {
          name: "releaseDateDay",
          classes: "govuk-input--width-2",
          label: "Day",
          id:"releaseDateDay",
          value: releaseDate.value.day,
          attributes: disabled
        },
        {
          name: "releaseDateMonth",
          classes: "govuk-input--width-2",
           label: "Month",
            id:"releaseDateMonth",
          value: releaseDate.value.month,
          attributes: disabled
        },
        {
          name: "releaseDateYear",
          classes: "govuk-input--width-4",
           label: "Year",
            id:"releaseDateYear",
          value: releaseDate.value.year,
          attributes: disabled
        }
      ],
      errorMessage: releaseDate.error
    }) }}



    {{ timeSpanInput({
        label: "Curfew hours on the day of release",
        hint: "Enter the start and end times of the curfew. For example 09:45 - 15:30 (24 hours)",
        id: "curfewTimes",
        namePrefix: "curfewTimes",
        value: curfewTimes.value,
        errorMessage: curfewTimes.error,
        disabled: not isOrderEditable
      }) }}

    {{ govukRadios({
        name: "address",
        fieldset: {
            legend: {
            text: "Curfew address on the day of release",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--s"
            }
        },
        hint: {
            text: "What address will the device wearer be at during curfew hours on their day of release? Select one option"
        },
        items: [
            {
            value: "PRIMARY",
            text: "Primary address",
            disabled: not isOrderEditable
            },
            {
            value: "SECONDARY",
            text: "Secondary address",
            disabled: not isOrderEditable
            },
            {
            value: "TERTIARY",
            text: "Third address",
            disabled: not isOrderEditable
            }
        ],
        value: address.value,
        errorMessage: address.error
        }) }}

    <div class="govuk-button-group">
      {% if isOrderEditable %}
        {{ govukButton({
            text: "Save and continue",
            name: "action",
            value: "continue"
        }) }}
        {{ govukButton({
            text: "Save and return back to to form section menu",
            classes: "govuk-button--secondary",
            name: "action",
            value: "back"
        }) }}
      {% else %}
        <a id="backToSummary" class="govuk-link" href="{{ orderSummaryUri }}">Return back to to form section menu</a>
      {% endif %}
    </div>
  </form>

{% endblock %}
