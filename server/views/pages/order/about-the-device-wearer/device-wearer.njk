        value: "VISION",
        text: "Visual impairment or blindness not corrected by wearing glasses"
      },
      {
        value: "HEARING",
        text: "Deafness or serious hearing impairment"
      },
      {
        value: "MOBILITY",
        text: "Physical disability or mobility issue"
      },
      {
        value: "DEXTERITY",
        text: "Fine motor or dexterity impairment"
      },
      {
        value: "LEARNING_UNDERSTANDING_CONCENTRATING",
        text: "Neurodiversity including conditions affecting learning, understanding or concentration"
      },
      {
        value: "MEMORY",
        text: "Condition affecting the memory or retaining information"
      },
      {
        value: "MENTAL_HEALTH",
        text: "Mental health condition"
      },
      {
        value: "STAMINA_BREATHING_FATIGUE",
        text: "Health condition affecting stamina, breathing or causing fatigue"
      },
      {
        value: "SOCIAL_BEHAVIOURAL",
        text: "Conditions affecting social skills and behaviour"
      },
      {
        divider: "Or"
      },
      {
        value: "OTHER",
        text: "The device wearer has a disability or health condition not listed",
        conditional: {
          html: otherDisabilityHtml
        }
      },
      {
        divider: "Or"
      },
      {
        value: "NONE",
        text: "Not able to provide this information"
      }
    ],
    values: disabilities.values,
    errorMessage: disabilities.error,
    disabled: not isOrderEditable
  }) }}

